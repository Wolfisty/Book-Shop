@model BookShop.Domain.ViewModels.Books.BooksViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div style="padding: 10px;"></div>
<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@Model.Img"
                 class="img-fluid rounded-start rounded" alt="@Model.Title">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title text-center">@Model.Title</h5>
                <p class="card-text"><b>Цена: </b>@Model.Price ₽</p>
                <p class="card-text"><b>Жанр: </b>@Model.Category</p>
                <p class="card-text"><small class="text-muted">Дата создания - @Model?.CreateDate</small></p>
                <p class="card-text"><b>Описание: </b>@Model?.LongDescription</p>
            </div>
        </div>
    </div>
</div>

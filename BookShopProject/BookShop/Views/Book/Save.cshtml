@using BookShop.Domain.Enum;
@model BookShop.Domain.ViewModels.Books.BooksViewModel
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

@{
    var textTitle = Model?.Id == 0 ? "Изменение данных" : "Добавление данных";
}

<div style="padding: 10px;"></div>
<div class="col-md-12">
    <div class="card-body">
        <div class="card card-outline-secondary" style="background-color: white">
            <div class="card-header">
                <h3 class="mb-0 text-center ParagraphHome">@textTitle</h3>
            </div>
            <div class="card-body gy-1">
                <form asp-action="Save" enctype="multipart/form-data">
                    <input asp-for="Id" hidden />
                    <div asp-validation-summary="All" style="font-size:23px; font-family:Impact, serif" class="text-danger text-center"></div>
                    <div class="row">
                        <div class="form-group col-md-4">
                            <label asp-for="@Model.Title" class="col-form-label"></label>
                            <input type="text" class="form-control" asp-for="@Model.Title">
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="@Model.Author" class="col-form-label"></label>
                            <input class="form-control" asp-for="@Model.Author" />
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="@Model.CreateDate" class="col-form-label"></label>
                            <input type="text" class="form-control" asp-for="@Model.CreateDate">
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="@Model.Price" class="col-form-label"></label>
                            <input type="text" class="form-control" asp-for="@Model.Price" />
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="@Model.Bestseller" class="col-form-label"></label>
                            <input type="text" class="form-control" asp-for="@Model.Bestseller">
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="@Model.Noveltie" class="col-form-label"></label>
                            <input type="text" class="form-control" asp-for="@Model.Noveltie">
                        </div>
                        </div>
                        <div class="row gy-1">
                            <div class="form-group col-md-12">
                                <label asp-for="@Model.LongDescription" class="col-form-label"></label>
                                <textarea type="text" class="form-control" asp-for="@Model.LongDescription"></textarea>
                            </div>
                            <div class="form-group col-md-12">
                                <label asp-for="@Model.ShortDescription" class="col-form-label"></label>
                                <textarea type="text" class="form-control" asp-for="@Model.ShortDescription"></textarea>
                            </div>
                        </div>
                    <div class=" row gy-2">
                            <div class="form-group ">
                                <label asp-for="@Model.Category">Жанр</label>
                                <select asp-for="@Model.Category" asp-items="@new SelectList(Enum.GetNames(typeof(Category)))"></select>
                            </div>
                            <div class="form-group">
                                <label class="col-form-label">Изображение</label>
                                <input asp-for="@Model.Img" class="form-control" type="text">
                            </div>
                        
                        <button class="btn btn-primary weight ">Отправить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>